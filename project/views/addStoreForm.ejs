<div class="form-cont">
    <form class="store-form">
        <div>
            <label for="storeName">Store Name</label>
            <input type="text" id="storeName" class="store-name" required>
        </div>
        <div>
            <label for="storeDescription">Store Description</label>
            <textarea id="storeDescription" class="store-description" required></textarea>
        </div>
        <div>
            <label for="totalProducts">Total Products</label>
            <input type="number" id="totalProducts" class="total-products" required>
        </div>
        <div>
            <label for="websiteOrAppLink">Website or App Link</label>
            <input type="url" id="websiteOrAppLink" class="website-or-app-link">
        </div>
        <button type="submit" class="create-store">Create</button>
        <button type="button" class="clear-store" style="display: none;">Clear</button>
    </form>
</div>
<script src="../public/js/store.js"></script>